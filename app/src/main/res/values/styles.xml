<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppThemeBar"
           parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
        <item name="android:actionMenuTextAppearance">@style/MenuItemText</item>
        <item name="android:actionMenuTextColor">@color/white</item>

        <item name="actionBarStyle">@style/MyActionBarStyle</item>
        <item name="actionMenuTextAppearance">@style/MenuItemText</item>
        <item name="actionMenuTextColor">@color/white</item>

        <!-- Set AppCompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>

        <item name="switchStyle">@style/Switch</item>

    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="Switch">
        <item name="switchMinWidth">64dp</item>
        <item name="android:thumb">@drawable/switch_thumb_selector</item>
        <item name="track">@drawable/switch_track</item>
        <item name="android:clickable">true</item>
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
    </style>


    <style name="MyActionBarStyle"
           parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/color_primary</item>
        <item name="android:subtitle">@string/action_bar_sub_title
        </item>
        <item name="android:titleTextStyle">
            @style/MyTheme.ActionBar.TitleTextStyle
        </item>
        <item name="android:subtitleTextStyle">
            @style/MyTheme.ActionBar.SubtitleTextStyle
        </item>
        <item name="android:logo">@drawable/icon_logo</item>

        <item name="background">@color/color_primary</item>
        <item name="subtitle">@string/action_bar_sub_title</item>
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle
        </item>
        <item name="subtitleTextStyle">
            @style/MyTheme.ActionBar.SubtitleTextStyle
        </item>
        <item name="logo">@drawable/icon_logo</item>

    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyTheme.ActionBar.SubtitleTextStyle"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="MenuItemText"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="ActionBarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="ControlBarButtonWhite">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ControlBarButtonOffWhite" parent="@style/ActionBarButton">
        <item name="android:textColor">@color/off_white</item>
    </style>


    <style name="SpinnerItem"
           parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>