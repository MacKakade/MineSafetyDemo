<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@color/citation_form_bg"
            android:padding="18dp"
            android:stretchColumns="*">

            <TableRow>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_span="4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="17. Action to Terminate"
                        android:textColor="@color/inspection_button_blue"
                        android:textSize="18sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/white"
                        android:gravity="top"
                        android:imeOptions="actionDone"
                        android:minLines="4"
                        android:padding="4dp"
                        android:textSize="18sp" />
                </LinearLayout>
            </TableRow>

            <TableRow>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_span="4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="18. Terminate"
                        android:textColor="@color/inspection_button_blue"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/white"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/txv_label_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/btn_date"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txv_label_date"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/abc_tab_indicator_mtrl_alpha"
                            android:padding="4dp"
                            android:text="02/24/2015"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txv_label_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_toRightOf="@+id/btn_date"
                            android:text="Time (24 Hr. Clock)"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/btn_time"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/txv_label_time"
                            android:layout_below="@+id/txv_label_time"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/abc_tab_indicator_mtrl_alpha"
                            android:padding="4dp"
                            android:text="19:34"
                            android:textSize="18sp" />


                    </RelativeLayout>
                </LinearLayout>
            </TableRow>
        </TableLayout>


    </RelativeLayout>
</ScrollView>