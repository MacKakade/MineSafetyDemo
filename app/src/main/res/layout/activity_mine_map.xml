<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/top_panel"
                android:background="#dce6ef"
                android:layout_height="wrap_content">

            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:layout_centerVertical="true"
                          android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/title_org"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:textAppearanceLarge"
                        android:layout_marginLeft="15dp"
                        android:text="@string/name_mine_organisation"/>

                <TextView
                        android:id="@+id/title_mine"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="15dp"
                        style="?android:textAppearanceMedium"
                        android:layout_height="wrap_content"
                        android:text="@string/name_cave"/>

            </LinearLayout>
            <Button
                    android:id="@+id/button_referral_docs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/button_inpection_reports"
                    android:layout_margin="12dp"
                    android:background="#2f517d"
                    android:layout_centerVertical="true"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:text="Referral Documents"
                    android:textColor="@color/white"/>

            <Button
                    android:id="@+id/button_inpection_reports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="12dp"
                    android:background="#2f517d"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:text="Inspection Reports"
                    android:textColor="@color/white"/>
        </RelativeLayout>
        <View
                android:id="@+id/view_border"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/top_panel"
                android:background="#000000"/>

        <FrameLayout
                android:id="@+id/imageFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_border">


            <com.dmi.minesafety.demo.TouchImageView
                    android:id="@+id/imageViewMine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:contentDescription="ty"
                    android:src="@drawable/mine_map"/>

        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/left_layout"
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#f8f8f8">

        <Spinner
                android:id="@+id/spinner_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"/>

        <ListView
                android:id="@+id/left_drawer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/spinner_date"
                android:choiceMode="multipleChoice"
                android:divider="@android:color/black"
                android:dividerHeight="0.5dp"/>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>